{
  "name": "nest-circuitbreaker",
  "version": "1.0.0",
  "description": "Adapter for Hystrixjs Circuit Breaker for NestJs",
  "main": "dist/index.js",
  "scripts": {
    "test": "nyc jasmine src/test/**/*.spec.ts",
    "build": "tsc -p tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cbdr/nest-circuitbreaker.git"
  },
  "author": "georgii.rychko@valor-software.com",
  "license": "UNLICENSED",
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text",
      "json",
      "html"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "all": true,
    "sourceMap": true,
    "instrument": true,
    "report-dir": "./coverage"
  },
  "peerDependencies": {
    "@nestjs/common": "4.1.1",
    "@nestjs/core": "4.1.3",
    "lodash": "4.17.4",
    "hystrixjs": "0.2.0",
    "rxjs": "5.5.2",
    "reflect-metadata": "0.1.10"
  },
  "devDependencies": {
    "@nestjs/common": "4.1.1",
    "@nestjs/core": "4.1.3",
    "@nestjs/microservices": "4.1.0",
    "@nestjs/websockets": "4.1.0",
    "@nestjs/testing": "4.1.0",
    "@types/jasmine": "2.5.53",
    "@types/hystrixjs": "0.2.0",
    "chokidar-cli": "1.2.0",
    "lodash": "4.17.4",
    "jasmine": "2.8.0",
    "codelyzer": "4.0.1",
    "jasmine-core": "2.8.0",
    "jasmine-spec-reporter": "4.2.1",
    "typescript": "2.4.2",
    "hystrixjs": "0.2.0",
    "reflect-metadata": "0.1.10",
    "nyc": "11.2.1",
    "rxjs": "5.5.2",
    "ts-node": "3.3.0"
  }
}
